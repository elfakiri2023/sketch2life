{
	"name": "sketch2life",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"wrangler:dev": "wrangler pages dev .svelte-kit/cloudflare",
		"build": "vite build",
		"preview": "vite preview",
		"proxy": "wrangler dev node_modules/cfw-bindings-wrangler-bridge/worker/index.js",
		"deploy": "npm run build && npx wrangler pages deploy .svelte-kit/cloudflare --commit-dirty=true --branch=master",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"db:gen": "drizzle-kit generate",
		"db:mig:local": "wrangler d1 migrations apply sketch2life-db --local",
		"db:mig:prod": "wrangler d1 migrations apply sketch2life-db --remote",
		"db:mig:preview": "wrangler d1 migrations apply sketch2life-db --preview",
		"db:studio:dev": "drizzle-kit studio",
		"db:studio:prd": "cross-env NODE_ENV=production drizzle-kit studio"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@skeletonlabs/skeleton": "2.10.2",
		"@skeletonlabs/tw-plugin": "0.4.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/forms": "0.5.7",
		"@tailwindcss/typography": "0.5.14",
		"autoprefixer": "10.4.20",
		"cfw-bindings-wrangler-bridge": "^0.11.0",
		"postcss": "8.4.41",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"tailwindcss": "3.4.9",
		"vite": "^5.0.3",
		"vite-plugin-tailwind-purgecss": "0.3.3"
	},
	"type": "module",
	"dependencies": {
		"@floating-ui/dom": "1.6.10",
		"@lucia-auth/adapter-sqlite": "^3.0.2",
		"@sveltejs/adapter-cloudflare": "^4.7.1",
		"cross-env": "^7.0.3",
		"drizzle-kit": "^0.24.0",
		"drizzle-orm": "^0.33.0",
		"konva": "^9.3.14",
		"svelte-konva": "^0.3.1",
		"svelte-typewriter": "^3.2.3",
		"wrangler": "^3.60.2"
	}
}
